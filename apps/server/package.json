{
  "name": "server",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch ./src/server.ts",
    "build": "tsup ./src/server.ts",
    "start": "pnpm db.migrate.deploy && node ./dist/server",
    "test": "vitest --run",
    "test.watch": "vitest",
    "test.cov": "vitest --run --coverage",
    "test.ui": "vitest --ui --open",
    "test.e2e": "vitest --config ./vitest-e2e.config.ts",
    "db.mig.dev": "prisma migrate dev",
    "db.mig.deploy": "prisma migrate deploy",
    "db.seed": "prisma db seed"
  },
  "dependencies": {
    "@clerk/fastify": "^0.2.4",
    "@fastify/cors": "^8.2.0",
    "@prisma/client": "^4.10.1",
    "axios": "^1.3.5",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "fastify": "^4.13.0",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^9.3.0",
    "@types/supertest": "^2.0.12",
    "@vitest/coverage-c8": "^0.28.5",
    "@vitest/ui": "^0.28.5",
    "prisma": "^4.10.1",
    "prisma-erd-generator": "^1.2.5",
    "supertest": "^6.3.3",
    "tsconfig": "workspace:*",
    "tsup": "^6.6.3",
    "tsx": "^3.12.3",
    "typescript": "^4.7.4",
    "vite-tsconfig-paths": "^4.0.5",
    "vitest": "^0.28.5"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  }
}
